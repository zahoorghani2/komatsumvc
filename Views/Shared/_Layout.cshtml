  }

  #sidebar ul li a:hover {
    color: #fff;
  }

  #sidebar ul li.active>a {
    background: transparent;
    color: #fff;
  }

  #sidebar .custom-menu {
    display: inline-block;
    position: absolute;
    right: 0;
    margin-right: -20px;
    -webkit-transition: 0.3s;
    -o-transition: 0.3s;
    transition: 0.3s;
  }

  #sidebar .custom-menu .btn {
    width: 60px;
    height: 60px;
    border-radius: 50%;
